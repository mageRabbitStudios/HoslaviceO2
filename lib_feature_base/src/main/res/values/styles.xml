    <!-- BASE APPLICATION THEME -->
    <!-- *************************************************************************************** -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryDark">@color/app__dark_blue</item>
        <item name="colorPrimary">@color/app__blue</item>
        <item name="colorAccent">@color/app__blue</item>
        <item name="android:textColorPrimary">@color/app__white</item>
        <item name="android:statusBarColor">@color/app__dark_blue</item>
