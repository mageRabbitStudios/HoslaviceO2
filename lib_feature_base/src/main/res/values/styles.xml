    <!-- *************************************************************************************** -->
    <!-- LAUNCH SCREEN THEME -->
    <!-- *************************************************************************************** -->
    <style name="AppTheme.Launcher">
        <item name ="android:windowBackground">@drawable/splash_hoslavice</item>
    </style>

    <!-- *************************************************************************************** -->
    <!-- TEXT STYLES -->
    <!-- *************************************************************************************** -->

    <style name="AppTheme.Text.Errors" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/app__blue</item>
